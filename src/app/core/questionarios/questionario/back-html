<section class="questionario" *ngIf="!questionarioRespondido && !carregando">
  <form [formGroup]="form">
    <h3>{{questionario?.nomeQuestionario | uppercase}}</h3>

    <div formArrayName="perguntas" *ngFor="let pergunta of form.get('perguntas').controls; let ordem = index" class="perguntas">
      <div [formGroupName]="ordem">
        <p class="titulo">{{ordem+1}} - {{pergunta?.value.titulo}}</p>

        <mat-radio-group *ngIf="pergunta?.value?.tipo == 'radio'" class="opcoes" formControlName="resposta">
          <mat-radio-button [value]="opcoes" *ngFor="let opcoes of pergunta?.value?.opcoes">{{opcoes}}</mat-radio-button>
        </mat-radio-group>

        <hr>
      </div>
    </div>


    <div formArrayName="perguntasSelect" *ngFor="let pergunta of form.get('perguntasSelect').controls; let ordem = index" class="perguntas">
        <div [formGroupName]="ordem">
          <p class="titulo">{{ordem+1}} - {{pergunta?.value.titulo}}</p>

          <!-- ADICIONAR FOORM ARRAY NAME -->
          <div class="opcoes">
              <div class="select" *ngFor="let perguntasSelect of pergunta?.value?.perguntas">
                <p>{{perguntasSelect.titulo}}</p>
                <mat-form-field appearance="legacy">
                  <mat-select placeholder="Selecione uma opção" formControlName="resposta">
                    <mat-option [value]="opcoesSelect" *ngFor="let opcoesSelect of pergunta.value?.opcoes">{{opcoesSelect}}</mat-option>
                  </mat-select>
                </mat-form-field>
              </div>
            </div>
         </div>
      </div>

    <div class="decisao-botoes">
      <button mat-stroked-button color="primary" (click)="decisaoVoltar()">VOLTAR</button>
      <button mat-flat-button color="primary" (click)="decisaoSalvar()" [disabled]="!form.valid">SALVAR</button>
    </div>
  </form>
</section>

<app-questionario-respondido *ngIf="questionarioRespondido && !carregando"></app-questionario-respondido>
